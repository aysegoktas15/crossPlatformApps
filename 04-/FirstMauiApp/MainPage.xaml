<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstMauiApp.MainPage"
             xmlns:viewmodel="clr-namespace:FirstMauiApp.ViewModel"
             x:DataType="viewmodel:MainViewModel">
    


    <Grid 
        RowDefinitions="120, auto, auto, auto, *" 
        RowSpacing="4"
        ColumnDefinitions=".80*, .20*, .20*, .20*" 
        Padding="12"
        ColumnSpacing="4">
        
        
        <Image 
            Grid.ColumnSpan="4" 
            Source="me.JPEG" 
            BackgroundColor="Beige"></Image>
        
        <Entry 
            Placeholder="Enter a color" 
            PlaceholderColor="DimGray" 
            Grid.Row="1"
            Text="{Binding Color}"
            x:Name="colorNameEntry"></Entry>
        
        <Button 
            Text="ADD" 
            Grid.Row="1" 
            Grid.Column="1"
            Command="{Binding AddColorCommand}"></Button>
        <Button 
            Text="DELETE" 
            Grid.Row="1" 
            Grid.Column="2"
            Command="{Binding DeleteColorCommand}"
            CommandParameter="{Binding Source={x:Reference colorNameEntry},Path=Text}"></Button>
        <Button 
            Text="PLAY" 
            Grid.Row="1" 
            Grid.Column="3"
            Clicked="OnPlayClicked"></Button>

        <CollectionView 
            Grid.Row="2" 
            Grid.ColumnSpan="1"
            ItemsSource="{Binding ColorItems}">

            <CollectionView.ItemTemplate>
                <!-- Creating data template -->
                <DataTemplate x:DataType="{x:Type x:String}">
                    <Grid 
                        Padding="4, 4">
                        <Frame>
                            <Label 
                                Text="{Binding .}" 
                                FontSize="Medium"></Label>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            
        </CollectionView>
    </Grid>
    
